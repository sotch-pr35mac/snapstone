<!-- Define the page using the nativescript namespace and calling onNavigatingTo when navigated to -->
<Page class="page"
  navigatingTo="onNavigatingTo"
  xlmns="https://www.nativescript.org/tns.xsd">

  <!-- Define the ActionBar -->
  <ActionBar title="Help" class="action-bar">
    <NavigationButton text="Go Back" android.systemIcon="ic_menu_back" tap="goBack" />
  </ActionBar>

  <!-- Define the layout -->
  <StackLayout id="swipable">

    <!-- Add some text to the page -->
    <Label textWrap="true" class="h1" text="How to use Snapstone" > </Label>
    <Label textWrap="true" text="1. Click on the camera icon in your native app to take a picture of Chinese text to translate"> </Label>
    <Label text="2. Look at the definition(s) displayed on the screen of your app"> </Label>
      
    
    <Label textWrap="true" class="h1" text="Some FAQs" > </Label>
      
    <Label  class="h2" text="How do I Bookmark?" > </Label>
    <Label  textWrap="true" class="h2" text="What can I do if my app fails to translate the characters in the picture?" > </Label> 
    <Label text=" Clean the camera lens and retake the picture "> </Label>
      

       
      
      
      
    
    
     

  </StackLayout>

</Page>
