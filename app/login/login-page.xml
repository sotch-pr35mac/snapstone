   <!-- Define the page using the nativescript namespace and calling onNavigatingTo when navigated to -->
  <Page class="page"
  navigatingTo="onNavigatingTo"
  xlmns="https://www.nativescript.org/tns.xsd">
      
  <!-- Define the ActionBar -->
  <ActionBar title="Login" class="action-bar">
    <NavigationButton text="Go Back" android.systemIcon="ic_menu_back" tap="goBack" />
  </ActionBar>

  <!-- Define the layout -->
  <StackLayout id="swipable">

    <!-- Login form layout with a Login button-->
      <TextField hint="Username/Email" text=""></TextField>
      <TextField hint="Password" secure="true"></TextField>
      <Button id="login-button" text="LOGIN" ></Button>
      
      
       </StackLayout>

</Page> 
      
     