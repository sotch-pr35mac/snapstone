<!-- Define the page using the nativescript namespace and calling onNavigatingTo (defined in app/settings/settings-page.js) to when navigated to -->
<Page class="page"
  navigatingTo="onNavigatingTo"
  xmlns="https://www.nativescript.org/tns.xsd">

  <!-- Define the ActionBar (the bar at the top with the title of the page and some navigation options) -->
  <ActionBar title="Settings" class="action-bar">
    <NavigationButton text="Go Back" android.systemIcon="ic_menu_back" tap="goBack"/>
  </ActionBar>

  <!-- Define the layout -->
  <StackLayout id="swipable">

    <!-- Add some text to the page -->
    <Label text="Settings will go here">
    </Label>
    
  </StackLayout>

</Page>
